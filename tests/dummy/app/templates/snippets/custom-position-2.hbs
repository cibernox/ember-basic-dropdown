<BasicDropdown @calculatePosition={{calculatePosition}} @onOpen={{perform addNames}} as |dd|>
  <dd.Trigger class="trigger-bootstrap-feel">Click me</dd.Trigger>

  <dd.Content class="content-bootstrap-feel arrow-left-content">
    {{#each names as |name|}}
      {{name}} <br>
    {{/each}}
  </dd.Content>
</BasicDropdown>